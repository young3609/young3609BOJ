#define _CRT_SECURE_NO_WARNINGS
#include <iostream>
#include <algorithm>
using namespace std;

int a[1001][1001];
int d[1001][1001];

int dx[3] = { 1,0,1 };
int dy[3] = { 0,1,1 };

int main() {
 int n, m;
 cin >> n >> m;
    for (int i = 1; i <= n; i++) {  
          for (int j = 1; j <= m; j++) {   
              cin >> a[i][j];  
          } 
      }
      for (int i = 1; i <= n; i++) {  
           for (int j = 1; j <= m; j++) {   
              d[i][j] = max(d[i - 1][j], max(d[i][j - 1], d[i - 1][j - 1])) + a[i][j];  
          }
      }
         cout << d[n][m] << '\n';
   return 0;
 }
